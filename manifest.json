{
    "manifest_version": 3,
    "name": "Web Content Summarizer",
    "version": "1.0",
    "description": "Summarizes web content using AI.",


    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],


    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon.png"
    },


    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],


    "background": {
        "service_worker": "background.js"  
    },

    "options_page": "options.html",

    "host_permissions": [
        "<all_urls>"
    ]
}